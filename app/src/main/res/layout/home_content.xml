<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/home_image_logo"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/ic_twitter_logo"
        android:contentDescription="@string/twitter_logo_content_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_label_welcome"/>

    <TextView
        android:id="@+id/home_label_welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/home_welcome_message"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="@dimen/text_large"
        app:layout_constraintTop_toBottomOf="@id/home_image_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_label"/>

    <TextView
        android:id="@+id/home_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/home_label_message"
        style="@style/label"
        android:visibility="visible"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/home_label_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_error_label"/>

    <TextView
        android:id="@+id/home_error_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:visibility="gone"
        android:textColor="@color/text_color_error"
        tools:text="Sorry, we couldn't find any user"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/home_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_et_username"/>

    <EditText
        android:id="@+id/home_et_username"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edittext_shape"
        android:inputType="text"
        android:hint="@string/home_search_hint"
        android:drawableStart="@drawable/ic_at"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_error_label"
        app:layout_constraintBottom_toTopOf="@id/home_btn_search_user"/>

    <Button
        android:id="@+id/home_btn_search_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_search_user"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@id/home_et_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>